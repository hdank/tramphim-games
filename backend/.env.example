# Database Configuration
# Use these variables to configure PostgreSQL connection
# Copy this file to .env and fill in your actual values

# PostgreSQL User
DB_USER=memory_game_user

# PostgreSQL Password (generate with: openssl rand -base64 32)
DB_PASSWORD=your_strong_password_here

# PostgreSQL Host
DB_HOST=localhost

# PostgreSQL Port (6432 for PgBouncer, 5432 for direct PostgreSQL)
DB_PORT=6432

# PostgreSQL Database Name
DB_NAME=memory_game_db
